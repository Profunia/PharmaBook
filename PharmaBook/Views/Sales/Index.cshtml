                                    <th>Qty</th>                                   
                                    <th>Description</th>                                   
                                    <th>Batch No.#</th>
                                    <th>Exp Date</th>
                                    <th>Rate</th>
                                    <th>Rs.</th>
                                    <th> Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in cartlists|filter: searchbox">
                                    <td>{{$index+1}}</td>
                                    <td>{{item.Qty}}</td>                                   
                                    <td>{{item.Description}}</td>                                   
                                    <td>{{item.BatchNo}}</td>
                                    <td>{{item.ExpDt | date :  "dd-MM-y" }}</td>
                                    <td>{{item.Qty}} * {{unitprice}}</td>
                                    <td>{{item.Amount}}</td>
                                    <td>                                       
                                        <button class="btn btn-danger btn-xs" ng-click="DelCrtIitem($index)"><i class="fa fa-trash-o"></i> Delete</button>
                                    </td>
                                </tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td>Total</td><td>{{totalprice}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
