@{
    ViewData["Title"] = "Index";  
}
<style>
    .container {
        width: 100%;
        border: 1px solid #d3d3d3;
    }      
    .container .header {
        background-color: #d3d3d3;
        padding: 3px;
        cursor: pointer;
        font-weight: bold;
    }
    p.content-one {
        display: none;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () { 
        $('.expand-one').click(function () {
            $('.content-one').slideToggle('slow');
            var value = $(this).text();
            if (value == "Collapse")
            {
                $(this).text("Expand")
            }
            else
            {
                $(this).text("Collapse")
            }
        });
    })
</script>
<div class="blank" ng-controller="MyController">
    <h2>Vendor Inbox</h2>
    <div class="blankpage-main" ng-if="divhide1">
        <a href="" ng-click="bcktoinbx('create')"><< Go to Inbox</a>
        <div class="row mt">
            <div class="col-xs-6 content-one">
                <div class="form-group">
                    <label>Name <span style="color:red;"> *</span></label>
                    <input type="text" required class="form-control" placeholder="Name" ng-model="Item.Name">
                    <span asp-for="name" style="color:red;"></span>
                </div>
                <div class="form-group">
                    <label>Address<span style="color:red;"> *</span></label>
                    <input type="text" required class="form-control" placeholder="Address" ng-model="Item.Address">
                    <span asp-for="batchNo" style="color:red;"></span>
                </div>

                <div class="form-group">
                    <label>Mobile <span style="color:red;"> *</span></label>
                    <input type="text" class="form-control" required placeholder="Mobile" ng-model="Item.Mobile">
                    <span asp-for="openingStock" style="color:red;"></span>
                </div>
            </div>
            <div class="col-xs-6 content-one">
                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" placeholder="Company Name" ng-model="Item.Company">
                </div>
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" class="form-control" placeholder="User Name" ng-model="Item.UserName">
                </div>
                <div class="form-group">
                    <br />
                    <button type="submit" class="btn btn-primary" ng-click="AddValues()">Submit</button>
                    @*<input type="text" class="form-control" placeholder="MRP" ng-model="Item.UserName">*@
                </div>
            </div>
        </div>
        </div>
        <br />
    <div class="blankpage-main" ng-if="divhide2">
        <a href="" ng-click="bcktoinbx('inbox')"><< Back Vendor Entry</a>
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="row">
                        <div class="col-xs-4">
                            <h4>Search Vendor</h4>
                        </div>
                        <div class="col-xs-8 right">
                            <input type="text" placeholder="Search Vendor" class="form-control" ng-model="searchbox" />
                        </div>
                    </div>
                    <table class="table table-striped table-advance table-hover" style="overflow-y: auto;height: 100px;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th><i class="fa fa-bullhorn"></i> Name</th>
                                <th class="hidden-phone"><i class="fa fa-question-circle"></i> Address</th>
                                <th><i class="fa fa-bookmark"></i> Mobile</th>
                                <th><i class=" fa fa-edit"></i> Company</th>                                
                                <th> Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in VendorList|filter: searchbox">
                                <td>{{$index+1}}</td>
                                <td><span ng-hide="cClass==item.id">{{item.vedorName }}</span><input type="text" ng-model="item.vedorName" ng-show="cClass==item.id" /></td>
                                <td class="hidden-phone"><span ng-hide="cClass==item.id">{{item.vedorAddress}}</span><input type="text" ng-model="item.vedorAddress" ng-show="cClass==item.id" /></td>
                                <td><span ng-hide="cClass==item.id">{{item.vedorMobile}}</span><input type="text" ng-model="item.vedorMobile" ng-show="cClass==item.id" /></td>
                                <td><span ng-hide="cClass==item.id">{{item.vedorCompnay}}</span><input type="text" ng-model="item.vedorCompnay" ng-show="cClass==item.id" /></td>
                                <td>
                                    <button class="btn btn-success btn-xs" ng-click="Updtdata(item)"><i class="fa fa-check"></i>Save</button>
                                    <button class="btn btn-primary btn-xs" ng-click="showdata(item,1)"><i class="fa fa-pencil"></i>Edit</button>
                                    <button class="btn btn-danger btn-xs" ng-click="delitem(item.id)"><i class="fa fa-trash-o"></i> Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
    </div>
    </div>
  
