@{
    ViewData["Title"] = "Index";  
}

<div ng-controller="MyController">
    <h2>Vendor Management</h2>
    <div class="blankpage-main" ng-if="divhide1">
        <div class="row">
            <div class="col-xs-4">
                <a href="" class="btn btn-primary" ng-click="bcktoinbx('create')"> << Back to Inbox</a>
             
            </div>           
        </div>
        <hr />
        <div class="row mt" ng-show="!isPreview">
            <div class="col-xs-6 content-one">
                <div class="form-group">
                    <label>Name <span style="color:red;"> *</span></label>
                    <input type="text" required class="form-control" placeholder="Name" ng-model="Item.Name">
                    <span asp-for="name" style="color:red;"></span>
                </div>
                <div class="form-group">
                    <label>Address<span style="color:red;"> *</span></label>
                    <input type="text" required class="form-control" placeholder="Address" ng-model="Item.Address">
                    <span asp-for="batchNo" style="color:red;"></span>
                </div>

                <div class="form-group">
                    <label>Mobile <span style="color:red;"> *</span></label>
                    <input type="text" class="form-control" required placeholder="Mobile" ng-model="Item.Mobile">
                    <span asp-for="openingStock" style="color:red;"></span>
                </div>
            </div>
            <div class="col-xs-6 content-one">
                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" placeholder="Company Name" ng-model="Item.Company">
                </div>
              
                <div class="form-group">
<span style="color:red;">{{errMsg}}</span>
                    <br />
                    <button type="submit" class="btn btn-primary" ng-click="AddValues()">Submit</button>
                    @*<input type="text" class="form-control" placeholder="MRP" ng-model="Item.UserName">*@
                </div>
            </div>
        </div>
        <div ng-show="isPreview" class="row alert alert-success">
            Vendor details has been successfully added. 
        </div>
        </div>
        <br />
    <div class="blankpage-main" ng-if="divhide2">      
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="row">
                        <div class="col-xs-4">
                            <a href="" class="btn btn-primary" ng-click="bcktoinbx('inbox')">Go to Vendor Entry</a>
                        </div>
                        <div class="col-xs-8 right">
                            <input type="text" placeholder="Search Vendor" class="form-control" ng-model="searchbox" />
                        </div>
                    </div>
                    <table class="table table-striped table-advance table-hover" style="overflow-y: auto;height: 100px;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Vendor ID</th>
                                <th><i class="fa fa-bullhorn"></i> Name</th>
                                <th class="hidden-phone"><i class="fa fa-question-circle"></i> Address</th>
                                <th><i class="fa fa-bookmark"></i> Mobile</th>
                                <th><i class=" fa fa-edit"></i> Company</th>                                
                                <th> Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in VendorList|filter: searchbox">
                                <td>{{$index+1}}</td>
                                <td>{{item.id}}</td>
                                <td><span ng-hide="cClass==item.id">{{item.vendorName }}</span><input type="text" ng-model="item.vendorName" ng-show="cClass==item.id" /></td>
                                <td class="hidden-phone"><span ng-hide="cClass==item.id">{{item.vendorAddress}}</span><input type="text" ng-model="item.vendorAddress" ng-show="cClass==item.id" /></td>
                                <td><span ng-hide="cClass==item.id">{{item.vendorMobile}}</span><input type="text" ng-model="item.vendorMobile" ng-show="cClass==item.id" /></td>
                                <td><span ng-hide="cClass==item.id">{{item.vendorCompnay}}</span><input type="text" ng-model="item.vendorCompnay" ng-show="cClass==item.id" /></td>
                                <td>
                                    <button class="btn btn-success btn-xs" ng-click="Updtdata(item)" ng-if="savebtn"><i class="fa fa-check"></i>Save</button>
                                    <button class="btn btn-primary btn-xs" ng-click="showdata(item,1)" ng-if="editbtn"><i class="fa fa-pencil" ></i>Edit</button>
                                    <button class="btn btn-danger btn-xs" ng-click="delitem(item.id)"><i class="fa fa-trash-o"></i> Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
    </div>
    </div>
  
