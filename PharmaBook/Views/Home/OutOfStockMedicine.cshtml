
@{
    ViewData["Title"] = "OutOfStockMedicine";
}

<h2>Less then 5 qty medicine in stock</h2>
<div class="blankpage-main" ng-controller="OutOfStockMedicineController">
    <div class="row">
        <div class="col-xs-4">
            <span>Total Medicine : </span> <strong> {{filtered.length}}</strong>
        </div>
        <div class="col-xs-4">
            <a href="/Purchased/CreatePurchasedOrder" class="btn btn-primary">Create Purchased Order</a>
        </div>
        <div class="col-xs-4">
            <a href="" class="btn btn-primary">Print</a>
        </div>
    </div>
   
   <hr />
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Mfg</th>
                <th>Batch No</th>
                <th>Exp Date</th>
                <th>Avl Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in filtered = (InvList)">
                <td>
                    {{$index + 1}}
                </td>
              
                <td>{{item.name}}</td>
                <td>{{item.companyName}}</td>
                <td>{{item.batchNo}}</td>
                <td>{{item.expDate | date : 'dd/MM/yyyy'}}</td>
                <td>{{item.openingStock}}</td>
            </tr>
        </tbody>
    </table>

</div>

