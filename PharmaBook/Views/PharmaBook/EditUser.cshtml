@{
    Layout = null;
}

@model UserProfileVM
<!DOCTYPE HTML>
<html>
<head>
    <title>PharmaBook</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all">

</head>
<body>
    <div class="container">
        <a href="/PharmaBook/Admin"><< Back to Admin Screen</a>
        <h2>Registration Page</h2>
        <div asp-validation-summary="ModelOnly" style="color:red;">

        </div>
        <form method="post" asp-action="EditUser" asp-controller="PharmaBook">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Clinic Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label>Sub Title</label>
                        <input type="text" class="form-control" value="Chemist & Druggist" asp-for="subTitle" />
                    </div>
                    <div class="form-group">
                        <label>DL No</label>
                        <input type="text" class="form-control" asp-for="DLNo" />
                    </div>
                    <div class="form-group">
                        <label>Mobile</label>
                        <input type="text" class="form-control" asp-for="Mobile" />
                        @Html.HiddenFor(x=>x.CreatedDt)
                        @Html.HiddenFor(x=>x.lastLogin)
                    </div>
                    <div class="form-group">
                        <label>UserName</label>
                        <input type="text" class="form-control" asp-for="userName" />
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Address 1</label>
                        <input type="text" class="form-control" asp-for="Address1" />
                    </div>
                    <div class="form-group">
                        <label>Address2</label>
                        <input type="text" class="form-control" asp-for="Address2" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <label>Account Exp Dt</label>
                        <input type="date" class="form-control" asp-for="AccountExpDt" />
                    </div>                  
                    <div class="form-group">
                        <label>isActive</label>
                        <input type="checkbox" class="form-control" asp-for="IsActive" />
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>

        </form>

    </div>

</body>
</html>


