@{
    Layout = null;
}

@model UserProfile
<!DOCTYPE HTML>
<html>
<head>
    <title>PharmaBook</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all">   
    
</head>
<body>
<div class="container">
    <a href="/PharmaBook/Admin"><< Back to Admin Screen</a>
        <h2>Registration Page</h2> 
    <div asp-validation-summary="ModelOnly" style="color:red;">

    </div>
    <form method="post" asp-action="Register" asp-controller="PharmaBook">
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label>Clinic Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label>Sub Title</label>
                    <input type="text" class="form-control" value="Chemist & Druggist" asp-for="subTitle" />
                </div>
                <div class="form-group">
                    <label>DL No</label>
                    <input type="text" class="form-control" asp-for="DLNo" />
                </div>
                <div class="form-group">
                    <label>Mobile</label>
                    <input type="text" class="form-control" asp-for="Mobile" />
                </div>
                <div class="form-group">
                    <label>UserName</label>
                    <input type="text" class="form-control" asp-for="userName" />
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <label>Address 1</label>
                    <input type="text" class="form-control" asp-for="Address1" />
                </div>
                <div class="form-group">
                    <label>Address2</label>
                    <input type="text" class="form-control" asp-for="Address2" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label>Account Exp Dt</label>
                    <input type="date" class="form-control" asp-for="AccountExpDt" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="text" class="form-control" asp-for="Pwd" />
                </div>
            </div>
            <input type="submit" class="btn btn-primary"  value="Submit"/>
        </div>

    </form>

</div>
        
</body>
</html>


