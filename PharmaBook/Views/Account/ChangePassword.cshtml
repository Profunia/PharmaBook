
@{
    ViewData["Title"] = "ChangePassword";
}
@model ChangePwdViewModel
<h2>Change Password</h2>
<div class="blankpage-main">
    @if (TempData["msg"] != null)
    {
        <div class="row alert alert-success">
            @TempData["msg"]

        </div>

    }
    <div asp-validation-summary="ModelOnly" style="color:red;">

    </div>
    <form method="post" asp-antiforgery="true">
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label>Current Password </label> <span style="color:red"> *</span>
                    <input type="password" class="form-control" asp-for="oldPassword" required/>
                </div>
                <div class="form-group">
                    <label>New Password</label> <span style="color:red"> *</span>
                    <input type="password" class="form-control" required asp-for="newPassword" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label> <span style="color:red"> *</span>
                    <input type="password" class="form-control" required asp-for="confirmPassword" />
                </div>
                <div class="form-group">
                    
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                </div>
                
        </div>
            </div>



</form>
</div>
